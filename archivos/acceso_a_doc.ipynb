   "source": [
    "file = open('devices.txt', 'a')\n",
    "\n",
    "while True:\n",
    "    x = input('Add a new item:')\n",
    "    newItem = x\n",
    "    if newItem != \"exit\":\n",
    "        file.write(newItem + '\\n')\n",
    "    else:\n",
    "        print(\"All done!\")\n",
    "    break\n",
    "\n",
    "file.close()"
   ]
